{
  "name": "aws-actions",
  "version": "0.0.3",
  "description": "GitHub actions for AWS services",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisgreen/aws-actions.git"
  },
  "keywords": [
    "github",
    "actions",
    "aws",
    "amplify"
  ],
  "author": "Luis Chac√≥n",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/luisgreen/aws-actions/issues"
  },
  "homepage": "https://github.com/luisgreen/aws-actions#readme",
  "private": true,
  "workspaces": [
    "amplify_deployment"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "release": "lerna version --conventional-commits"
  },
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vercel/ncc": "^0.27.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "command": {
    "version": {
      "allowBranch": "main"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --single-quote --write"
    ],
    "*package.json": [
      "prettier --write --plugin=prettier-plugin-package"
    ]
  }
}
