{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true
  },
  "include": [],
  "exclude": ["node_modules"]
}
